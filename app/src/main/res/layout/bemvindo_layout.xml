<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#DAD5D0"
    android:orientation="vertical"
    tools:context=".Bemvindo_Activity">


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/doginhoo"
        android:layout_marginTop="70dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:backgroundTint="#DAD5D0"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="150dp"
            app:cardCornerRadius="70dp">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="150dp"
                android:layout_marginStart="15dp"
                android:background="#fff"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to "
                    android:textColor="#A555EC"
                    android:fontFamily="@font/montserrat"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOGGERY"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#CD945D"
                    android:textSize="40sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="520dp"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnsingin"
                style="@style/Widget.Material3.Button"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:backgroundTint="#685453"
                android:rotationY="4"
                android:text="Sign In"
                android:fontFamily="@font/montserrat"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnstart"
                style="@style/Widget.Material3.Button"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:backgroundTint="#A555EC"
                android:rotationY="-4"
                android:text="Start!"
                android:fontFamily="@font/montserrat"
                android:textColor="#fff"
                android:textSize="20sp" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>